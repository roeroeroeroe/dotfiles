#!/usr/bin/env bash

DMENU_LINES=40
LUT_FILE="${XDG_DATA_HOME:-"$HOME/.local/share"}/unicode"

[ ! -f "$LUT_FILE" ] && { echo "lut not found at $LUT_FILE"; exit 1; }
chosen=$(cat "$LUT_FILE" | dmenu -i -l "$DMENU_LINES") || exit 0
symbol=$(echo "$chosen" | awk '{print $1}')
[ -n "$symbol" ] && \
	printf "$symbol" | xclip -se c
